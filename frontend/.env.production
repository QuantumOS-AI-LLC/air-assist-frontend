# Production Configuration for Vercel
# Note: VITE_BACKEND_URL will be auto-detected from window.location.origin
# Note: WebSocket will connect directly to OpenAI (no proxy needed)

# OpenAI Configuration (set this in Vercel dashboard)
# VITE_OPENAI_API_KEY=your_openai_api_key_here

# Default n8n Configuration
VITE_DEFAULT_N8N_URL=https://your-n8n-instance.com/webhook/air

# App Configuration
VITE_APP_NAME=Air Assist
VITE_APP_DESCRIPTION=Voice-Controlled PWA with Bluetooth Support

# Production Settings
VITE_NODE_ENV=production
VITE_DEBUG_MODE=false
